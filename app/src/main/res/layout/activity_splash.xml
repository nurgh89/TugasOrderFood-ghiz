<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity">
<RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_animation"
        android:id="@+id/layeranimation_splash">

   <ImageView
           android:id="@+id/logo"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:src="@drawable/starbuk_transparent"
           android:layout_gravity="center"
           android:layout_centerInParent="true">

   </ImageView>

    <TextView
            android:id="@+id/splashtext_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome in Our Shop"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@+id/logo" android:fontFamily="@font/annie_use_your_telescope">

    </TextView>



</RelativeLayout>

</RelativeLayout>